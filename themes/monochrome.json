{
  "name": "Monochrome Theme â€“ Power",
  "type": "dark",
  "colors": {
    "editor.background": "#000000",
    "editor.foreground": "#eaeaea",

    "editorCursor.foreground": "#4da3ff",

    "editorLineNumber.foreground": "#3a3a3a",
    "editorLineNumber.activeForeground": "#4da3ff",

    "editor.selectionBackground": "#1b3f73",
    "editor.selectionHighlightBackground": "#1b3f7366",

    "activityBar.background": "#000000",
    "activityBar.foreground": "#eaeaea",
    "activityBar.activeBorder": "#4da3ff",
    "activityBarBadge.background": "#2563eb",
    "activityBarBadge.foreground": "#ffffff",

    "sideBar.background": "#000000",
    "sideBar.foreground": "#d1d5db",
    "sideBar.border": "#0f172a",
    "sideBarTitle.foreground": "#ffffff",

    "list.background": "#000000",
    "list.activeSelectionBackground": "#1e3a8a",
    "list.activeSelectionForeground": "#ffffff",
    "list.inactiveSelectionBackground": "#0b1f3a",
    "list.hoverBackground": "#0f172a",
    "list.hoverForeground": "#ffffff",
    "list.focusBackground": "#2563eb",

    "statusBar.background": "#000000",
    "statusBar.foreground": "#eaeaea",
    "statusBar.border": "#0f172a",
    "statusBar.debuggingBackground": "#1e40af",

    "titleBar.activeBackground": "#000000",
    "titleBar.activeForeground": "#ffffff",
    "titleBar.inactiveBackground": "#000000",
    "titleBar.inactiveForeground": "#6b7280",

    "panel.background": "#000000",
    "panel.border": "#0f172a",

    "focusBorder": "#4da3ff"
  },

  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment"],
      "settings": {
        "foreground": "#6b7280",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Keywords",
      "scope": ["keyword", "storage.type"],
      "settings": {
        "foreground": "#4da3ff",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Strings",
      "scope": ["string"],
      "settings": {
        "foreground": "#22c55e"
      }
    },
    {
      "name": "Numbers",
      "scope": ["constant.numeric"],
      "settings": {
        "foreground": "#facc15"
      }
    },
    {
      "name": "Functions",
      "scope": ["entity.name.function"],
      "settings": {
        "foreground": "#60a5fa"
      }
    },
    {
      "name": "Variables",
      "scope": ["variable"],
      "settings": {
        "foreground": "#e5e7eb"
      }
    },
    {
      "name": "Types & Classes",
      "scope": ["entity.name.type", "support.type"],
      "settings": {
        "foreground": "#38bdf8"
      }
    },
    {
      "name": "Constants",
      "scope": ["constant.language"],
      "settings": {
        "foreground": "#f472b6"
      }
    },
    {
      "name": "Operators",
      "scope": ["keyword.operator"],
      "settings": {
        "foreground": "#ffffff"
      }
    }
  ]
}

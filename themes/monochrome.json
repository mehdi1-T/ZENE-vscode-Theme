{
  "name": "Monochrome Theme",
  "type": "dark",
  "colors": {
    "editor.background": "#000000",
    "editor.foreground": "#ffffff",

    "activityBar.background": "#000000",
    "activityBar.foreground": "#ffffff",
    "activityBarBadge.background": "#3b82f6",
    "activityBarBadge.foreground": "#ffffff",

    "sideBar.background": "#000000",
    "sideBar.foreground": "#e5e5e5",
    "sideBarTitle.foreground": "#ffffff",

    "statusBar.background": "#000000",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingBackground": "#1e40af",

    "titleBar.activeBackground": "#000000",
    "titleBar.activeForeground": "#ffffff",
    "titleBar.inactiveBackground": "#000000",
    "titleBar.inactiveForeground": "#888888",

    "editorLineNumber.foreground": "#444444",
    "editorLineNumber.activeForeground": "#3b82f6",

    "editor.selectionBackground": "#1e3a8a",
    "editor.selectionHighlightBackground": "#1e3a8a88",

    "editorCursor.foreground": "#3b82f6",

    "list.background": "#000000",
    "list.activeSelectionBackground": "#1e3a8a",
    "list.activeSelectionForeground": "#ffffff",
    "list.hoverBackground": "#111111",
    "list.hoverForeground": "#ffffff",

    "panel.background": "#000000",
    "panel.border": "#1f2933",

    "focusBorder": "#3b82f6"
  },

  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment"],
      "settings": {
        "foreground": "#6b7280",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Keywords",
      "scope": ["keyword", "storage.type"],
      "settings": {
        "foreground": "#3b82f6"
      }
    },
    {
      "name": "Strings",
      "scope": ["string"],
      "settings": {
        "foreground": "#22c55e"
      }
    },
    {
      "name": "Numbers",
      "scope": ["constant.numeric"],
      "settings": {
        "foreground": "#facc15"
      }
    },
    {
      "name": "Functions",
      "scope": ["entity.name.function"],
      "settings": {
        "foreground": "#60a5fa"
      }
    },
    {
      "name": "Variables",
      "scope": ["variable"],
      "settings": {
        "foreground": "#e5e7eb"
      }
    },
    {
      "name": "Types & Classes",
      "scope": ["entity.name.type", "support.type"],
      "settings": {
        "foreground": "#38bdf8"
      }
    },
    {
      "name": "Constants",
      "scope": ["constant.language"],
      "settings": {
        "foreground": "#f472b6"
      }
    },
    {
      "name": "Operators",
      "scope": ["keyword.operator"],
      "settings": {
        "foreground": "#ffffff"
      }
    }
  ]
}

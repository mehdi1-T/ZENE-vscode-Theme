{
  "name": "Monochrome Theme â€“ Power",
  "type": "dark",
  "colors": {
    "editor.background": "#000000",
    "editor.foreground": "#eaeaea",

    "editorCursor.foreground": "#007AFF",

    "editorLineNumber.foreground": "#ffffff",
    "editorLineNumber.activeForeground": "#007AFF",

    "editor.selectionBackground": "#1b3f73",
    "editor.selectionHighlightBackground": "#1b3f7366",

    "activityBar.background": "#000000",
    "activityBar.foreground": "#eaeaea",
    "activityBar.activeBorder": "#007AFF",
    "activityBarBadge.background": "#007AFF",
    "activityBarBadge.foreground": "#ffffff",

    "sideBar.background": "#000000",
    "sideBar.foreground": "#ffffff",
    "sideBar.border": "#000000",
    "sideBarTitle.foreground": "#ffffff",

    "list.background": "#000000",
    "list.activeSelectionBackground": "#007AFF",
    "list.activeSelectionForeground": "#ffffff",
    "list.inactiveSelectionBackground": "#000000",
    "list.hoverBackground": "#000000",
    "list.hoverForeground": "#ffffff",
    "list.focusBackground": "#007AFF",

    "statusBar.background": "#000000",
    "statusBar.foreground": "#eaeaea",
    "statusBar.border": "#000000",
    "statusBar.debuggingBackground": "#007AFF",

    "titleBar.activeBackground": "#000000",
    "titleBar.activeForeground": "#ffffff",
    "titleBar.inactiveBackground": "#000000",
    "titleBar.inactiveForeground": "#ffffff",

    "panel.background": "#000000",
    "panel.border": "#000000",

    "focusBorder": "#007AFF"
  },

  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment"],
      "settings": {
        "foreground": "#ffffff",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Keywords",
      "scope": ["keyword", "storage.type"],
      "settings": {
        "foreground": "#007AFF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Strings",
      "scope": ["string"],
      "settings": {
        "foreground": "#ffffff"
      }
    },
    {
      "name": "Numbers",
      "scope": ["constant.numeric"],
      "settings": {
        "foreground": "#ffffff"
      }
    },
    {
      "name": "Functions",
      "scope": ["entity.name.function"],
      "settings": {
        "foreground": "#ffffff"
      }
    },
    {
      "name": "Variables",
      "scope": ["variable"],
      "settings": {
        "foreground": "#ffffff"
      }
    },
    {
      "name": "Types & Classes",
      "scope": ["entity.name.type", "support.type"],
      "settings": {
        "foreground": "#ffffff"
      }
    },
    {
      "name": "Constants",
      "scope": ["constant.language"],
      "settings": {
        "foreground": "#ffffff"
      }
    },
    {
      "name": "Operators",
      "scope": ["keyword.operator"],
      "settings": {
        "foreground": "#ffffff"
      }
    }
  ]
}
